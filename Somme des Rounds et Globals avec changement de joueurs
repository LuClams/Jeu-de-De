var rollDice = Math.round(Math.random() * (6 - 1) + 1);
const btnRoll = document.getElementById('add');
var numberRound = document.getElementById('round');
const btnHold = document.getElementById('hold');
var numberGlobal = document.getElementById('global');
var numberRounded = document.getElementById('rounded');
var numberGlobaled = document.getElementById('globaled');
const shop = document.getElementById('shop');
const shoped = document.getElementById('shoped');


$( "#hold" ).click(function() {
  $( "#shop" ).toggle();
    $( "#shoped" ).toggle();
});

function add(){

  if(shop.style.display==="inline-block"){
    let round = parseInt(numberRound.textContent);
      let rollDice = (Math.round(Math.random() * (6 - 1) + 1));
        if(rollDice!=1){
          let roundTotal = round + rollDice;
          numberRound.textContent = roundTotal;
        } else{
          numberRound.textContent = 0;
          btnHold.click();
        }
  } else if(shoped.style.display==="inline-block") {
      let rounded = parseInt(numberRounded.textContent);
      let rollDice = (Math.round(Math.random() * (6 - 1) + 1));
        if(rollDice!=1){
          let roundedTotal = rounded + rollDice;
          numberRounded.textContent = roundedTotal;
        } else{
          numberRounded.textContent = 0;
          btnHold.click();
        }
     
  }else if(shop.style.display==="none"){
    let rounded = parseInt(numberRounded.textContent);
      let rollDice = (Math.round(Math.random() * (6 - 1) + 1));
        if(rollDice!=1){
          let roundedTotal = rounded + rollDice;
          numberRounded.textContent = roundedTotal;
        } else{
          numberRounded.textContent = 0;
          btnHold.click();
        }
      
  }else{
    let round = parseInt(numberRound.textContent);
      let rollDice = (Math.round(Math.random() * (6 - 1) + 1));
        if(rollDice!=1){
          let roundTotal = round + rollDice;
          numberRound.textContent = roundTotal;
        } else{
          numberRound.textContent = 0;
          btnHold.click();
        }
      
  }
}

function hold(){
  if(shop.style.display==="inline-block"){
    let a = parseInt(numberGlobal.textContent);
      let b = a + eval(numberRound.textContent);
      numberGlobal.textContent = b;
      (numberRound.textContent) = "0";
        if(b >= 100){
          $('#de').html('<div>PLAYER 1 WINNER !!<div>').css('font-size', '5rem').css('color', 'red');
          btnRoll.removeEventListener("click", add);
        } else {
        }
     
  }else if(shoped.style.display==="none") {
    let a = parseInt(numberGlobaled.textContent);
      let b = a + eval(numberRounded.textContent);
      numberGlobaled.textContent = b;
      numberRounded.textContent = "0";
        if(b >= 100){
          $('#de').html('<div>PLAYER 2 WINNER !!<div>').css('font-size', '5rem').css('color', 'red');
          btnRoll.removeEventListener("click", add);
        } else {
          
        }
    
  }else if(shoped.style.display==="inline-block")
  {
    let a = parseInt(numberGlobaled.textContent);
      let b = a + eval(numberRounded.textContent);
      numberGlobaled.textContent = b;
      numberRounded.textContent = "0";
       
        if(b >= 100){
          $('#de').html('<div>PLAYER 2 WINNER !!<div>').css('font-size', '5rem').css('color', 'red');
          btnRoll.removeEventListener("click", add);
        } else {
         
        }
  }else {
    let a = parseInt(numberGlobal.textContent);
      let b = a + eval(numberRound.textContent);
      numberGlobal.textContent = b;
      (numberRound.textContent) = "0";
        if(b >= 100){
          $('#de').html('<div>PLAYER 1 WINNER !!<div>').css('font-size', '5rem').css('color', 'red');
          btnRoll.removeEventListener("click", add);
        } else {
       
        }
  }
}
btnRoll.addEventListener("click", add)
btnHold.addEventListener("click", hold)