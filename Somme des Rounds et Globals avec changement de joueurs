$( "#hold" ).click(function() {
  $( "#shop" ).toggle();
    $( "#shoped" ).toggle();
});
//add()
function add(){

  if(document.getElementById('shop').style.display==="inline-block"){
    let round = parseInt(numberRound.textContent);
      let rollDice = (Math.round(Math.random() * (6 - 1) + 1));
      let roundTotal = round + rollDice;
      numberRound.textContent = roundTotal;
  } else if(shoped.style.display==="inline-block") {
    let rounded = parseInt(numberRounded.textContent);
      let rollDice = (Math.round(Math.random() * (6 - 1) + 1));
      let roundedTotal = rounded + rollDice;
      numberRounded.textContent = roundedTotal;
  }else if(shop.style.display==="none"){
    let rounded = parseInt(numberRounded.textContent);
      let rollDice = (Math.round(Math.random() * (6 - 1) + 1));
      let roundedTotal = rounded + rollDice;
      numberRounded.textContent = roundedTotal;
  }else{
    let round = parseInt(numberRound.textContent);
      let rollDice = (Math.round(Math.random() * (6 - 1) + 1));
      let roundTotal = round + rollDice;
      numberRound.textContent = roundTotal;
  }
}

function hold(){
  if(document.getElementById('shop').style.display==="inline-block"){
    let a = parseInt(numberGlobal.textContent);
      let b = a + eval(numberRound.textContent);
      numberGlobal.textContent = b;
      (numberRound.textContent) = "0";
      //shop.style.display="none"
  }else if(shoped.style.display==="none") {
    let a = parseInt(numberGlobaled.textContent)
      let b = a + eval(numberRounded.textContent)
      numberGlobaled.textContent = b
      numberRounded.textContent = "0"
      //btnHold.addEventListener('click', addGlobaled)
      //$('#shop').css('display', 'inline-block')
      //$('#shoped').css('display', ' none')
  }else if(shoped.style.display==="inline-block"){
    let a = parseInt(numberGlobaled.textContent)
      let b = a + eval(numberRounded.textContent)
      numberGlobaled.textContent = b
      numberRounded.textContent = "0"
  }else {
    let a = parseInt(numberGlobal.textContent);
      let b = a + eval(numberRound.textContent);
      numberGlobal.textContent = b;
      (numberRound.textContent) = "0";
      //shop.style.display="none"
  }
}
btnRoll.addEventListener("click", add)
btnHold.addEventListener("click", hold)
